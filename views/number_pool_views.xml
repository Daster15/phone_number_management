<odoo>
    <!-- Tree View -->
    <record id="view_number_pool_tree" model="ir.ui.view">
        <field name="name">number.pool.tree</field>
        <field name="model">number.pool</field>
        <field name="arch" type="xml">
            <tree>
                <field name="number"/>
                <field name="source"/>
                <field name="number_type"/>
                <field name="status"/>
                <field name="subscriber_name"/>
                <field name="customer_id"/>
                <field name="reservation_date"/>
                <field name="activation_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_number_pool_form" model="ir.ui.view">
        <field name="name">number.pool.form</field>
        <field name="model">number.pool</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_reserve" string="Reserve" type="object" class="btn-primary" />
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" />
                    <button name="action_release" string="Release" type="object" class="btn-secondary" />
                    <button name="action_show_history" string="Show History" type="object" class="btn-default"/>
                    <field name="status" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="number"/>
                            <field name="source"/>
                            <field name="number_type"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="reseller_id"/>
                            <field name="subscriber_name"/>
                            <field name="customer_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="reservation_date"/>
                            <field name="activation_date"/>
                            <field name="release_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="History">
                            <field name="history_line_ids">
                                <tree>
                                    <field name="subscriber_name"/>
                                    <field name="customer_id"/>
                                    <field name="activation_date"/>
                                    <field name="release_date"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_number_pool_search" model="ir.ui.view">
        <field name="name">number.pool.search</field>
        <field name="model">number.pool</field>
        <field name="arch" type="xml">
            <search>
                <field name="number"/>
                <field name="customer_id"/>
                <field name="status"/>
                <filter string="Free Numbers" name="free" domain="[('status','=','free')]"/>
                <filter string="Reserved Numbers" name="reserved" domain="[('status','=','reserved')]"/>
                <filter string="Occupied Numbers" name="occupied" domain="[('status','=','occupied')]"/>
                <filter string="Grace Period" name="grace" domain="[('status','=','grace')]"/>
                <group expand="0" string="Group By">
                    <filter string="Source" name="group_by_source" context="{'group_by':'source'}"/>
                    <filter string="Type" name="group_by_type" context="{'group_by':'number_type'}"/>
                    <filter string="Reseller" name="group_by_reseller" context="{'group_by':'reseller_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_number_pool" model="ir.actions.act_window">
        <field name="name">Number Pool</field>
        <field name="res_model">number.pool</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_free':1}</field>
    </record>
</odoo>