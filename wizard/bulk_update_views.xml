<odoo>
    <record id="view_bulk_update_form" model="ir.ui.view">
        <field name="name">bulk.update.form</field>
        <field name="model">bulk.update.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="action_type"/>
                    <field name="new_status" />
                    <field name="subscriber_name"/>
                    <field name="customer_id"/>
                </group>
                <footer>
                    <button name="action_apply" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>